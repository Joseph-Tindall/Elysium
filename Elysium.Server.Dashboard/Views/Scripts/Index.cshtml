@model IEnumerable<Elysium.Server.Presentation.Models.Conditions.Script>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuccessCodes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FailureCodes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invert)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hypothesis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuccessCodes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FailureCodes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invert)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinimumVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hypothesis)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
